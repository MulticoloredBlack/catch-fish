{
	"name": "catch-fish",
	"displayName": "catch-fish",
	"description": "remember to catch-fish",
	"author": "emjio",
	"publisher": "emjio",
	"version": "0.1.0",
	"repository": "https://github.com/MulticoloredBlack/catch-fish",
	"engines": {
		"vscode": "^1.59.0"
	},
	"bugs": "https://github.com/emjio/git-auto-commit/issues",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"license": "MIT",
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [],
		"configuration": {
			"type": "object",
			"title": "catch-fish",
			"properties": {
				"catch-fish.autoTips": {
					"type": "boolean",
					"default": true,
					"description": "是否每日自动提醒摸一会儿鱼"
				},
				"catch-fish.interval": {
					"type": "number",
					"default": 3600,
					"description": "提醒起来活动喝水间隔，默认一小时。（单位秒）"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "catch-fish",
					"title": "catch-fish",
					"icon": "/resources/Fish.svg"
				}
			]
		},
		"views": {
			"catch-fish": [
				{
					"id": "tools",
					"name": "摸鱼助手"
				},
				{
					"id": "hooks",
					"name": "自定义摸鱼hooks(即将上线)"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js",
		"release": "standard-version",
		"publish": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"eslint": "^8.5.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"standard-version": ">=8.0.1",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
